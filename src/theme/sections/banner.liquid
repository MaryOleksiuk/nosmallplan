<section class="banner">
  {% if template == "index" %}
    <img class="banner__image" src="{% if section.settings.image == blank %} {{'bg_home-banner.jpg' | asset_url }} {%else %} {{ section.settings.image }} {% endif %}" alt="{{ section.settings.title }}">
  {% else %}
    <img class="banner__image" src="{{'bg_collection.png' | asset_url }}" alt="{{ section.settings.title }}">
  {% endif %}
  <div class="banner__content">
    <h1 class="banner__title">{{ section.settings.title }}</h1>
    <a class="button button--green" href="{{section.settings.button_url}}">{{ section.settings.button }}</a>
  </div>
</section>

{% schema %}
  {
    "name": "Banner",
    "settings": [
      {
        "id": "title",
        "type": "text",
        "label": "Title",
        "default": "Where have you been?"
      },
      {
        "id": "button",
        "type": "text",
        "label": "Button",
        "default": "Make your map"
      },
      {
        "id": "image",
        "type": "image_picker",
        "label": "Image"
      },
      {
        "id": "button_url",
        "type": "url",
        "label": "Button url"
      }
    ]
  }
{% endschema %}